<div class="modal fade" id="update" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure to update?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary btn-save-update">Save updates</button>
      </div>
    </div>
  </div>
</div>    
<script>
    const btn_save_update = document.querySelector('.btn-save-update');
    const form_update = document.querySelector('.form-update');
    btn_save_update.addEventListener('click', (event) => {
        form_update.submit();
    })
</script>       